[Unit]
Description=Ombi (Download Request Service)
After=radarr.service lidarr.service sonarr.service

[Service]
Type=simple
User=root
Group=root
ExecStartPre=-/usr/bin/podman rm -f %p
ExecStart=/usr/bin/podman run \
	--name=%p \
	--rm \
	--network=host \
	--security-opt label=disable \
	--mount type=bind,source=/opt/ombi,target=/config \
	-e TZ="America/New_York" \
	-e PGID=1100 \
	-e PUID=1100 \
	linuxserver/ombi
ExecStop=/usr/bin/podman stop %p
ExecReload=/usr/bin/podman restart %p
Restart=always

[Install]
WantedBy=multi-user.target

[Unit]
Description=rClone Web UI
After=rclone-media-drive.service
Requires=rclone-media-drive.service
BindsTo=rclone-media-drive.service

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/bin/rclone rcd --config /opt/rclone/rclone.conf --rc-web-gui rc-web-gui-update --rc-addr :3030 --rc-user admin --rc-pass admin
Restart=always

[Install]
WantedBy=multi-user.target
WantedBy=rclone-media-drive.service
